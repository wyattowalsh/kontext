# Kontext Application Environment Variables
# ========================================

# Application Settings
KONTEXT_DEBUG=false
KONTEXT_APP_NAME=Kontext
KONTEXT_VERSION=1.0.0

# Logging Configuration
KONTEXT_LOG_LEVEL=INFO
KONTEXT_LOG_DIR=logs

# Document Processing
KONTEXT_MAX_FILE_SIZE_MB=50
KONTEXT_MAX_WORKERS=4

# Web Crawling
KONTEXT_USER_AGENT=Kontext-Crawler/1.0 (+https://github.com/your-repo/kontext)
KONTEXT_DEFAULT_TIMEOUT=30
KONTEXT_MAX_RETRIES=3

# UI Configuration
KONTEXT_THEME=light
KONTEXT_RESULTS_PER_PAGE=50